@page
@model razorWebApplication1.Pages.SelectModel

<h2>Products</h2>

<form method="post">
    <div class="input-group mb-3">
        <input name="keyword" type="text" class="form-control" placeholder="商品名を入力" aria-label="Recipient's username" aria-describedby="button-addon2">
        <button name="action" value="search" class="btn btn-outline-secondary" type="submit" id="button-addon2">検索</button>
    </div>
</form>

<div class="list-group mb-3">
    @foreach (var item in Model.productList)
    {
        <a href="Update?id=@item.Id" class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">@item.Name</h5>
                <small>１日前</small>
        </div>
            <p class="mb-1">商品価格：@item.Price</p>
            <small>説明を書いてください。</small>
        </a>
    }
</div>

<div class="d-flex justify-content-center">
    <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group me-2" role="group" aria-label="First group" >
        @if (Model.totalPages > 1)
            @for (int i = 1; i <= Model.totalPages; i++)
            {
                @if (Model.pageNumber == @i)
                    {
                        <a class="btn btn-primary" asp-page="/Select" asp-route-pageNumber="@i">@i</a>
                    } else
                    {
                        <a class="btn btn-outline-primary" asp-page="/Select" asp-route-pageNumber="@i">@i</a>
                    }
                    
            }
        </div>
    </div>
</div>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a class="btn btn-primary" asp-page="/Create">登録</a>
</div>