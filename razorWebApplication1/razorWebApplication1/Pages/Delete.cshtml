@page
@model razorWebApplication1.Pages.DeleteModel

<h2>Delete Product</h2>

@if (Model.Product != null)
{
    <div>
        <h4>Are you sure you want to delete this product?</h4>
        <dl>
            <dt>ID</dt>
            <dd>@Model.Product.Id</dd>
            <dt>Name</dt>
            <dd>@Model.Product.Name</dd>
            <dt>Price</dt>
            <dd>@Model.Product.Price</dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Product.Id" value="@Model.Product.Id" />
            <button type="submit">Delete</button>
            <a asp-page="Index">Cancel</a>
        </form>
    </div>
}
else
{
    <p>Product not found.</p>
}
